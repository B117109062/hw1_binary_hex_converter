#include <iostream>
using namespace std;
int main() {
    int decimal;
    
    cout << "請輸入一個十進位數字 (0～255): ";
    cin >> decimal;
    
    if (decimal < 0 || decimal > 255) {
        cout << "輸入超出範圍！" << endl;
        return 1;
    }
    
    // 轉換為二進位
    cout << "二進位表示: " << bitset<8>(decimal) << endl;
    
    // 轉換為十六進位
    cout << "十六進位表示: << hex << setw(2) << setfill('0') << decimal << endl;
    
    return 0;
}
